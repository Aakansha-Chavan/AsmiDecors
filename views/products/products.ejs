<% layout("/layouts/boilerplate.ejs") %>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
        <% for( let decoration of alldecorations ) { %>
          <% if (decoration._id) { %>
              <a href="/decorations/<%= decoration._id %>" class="decoration-link">
            <div class="card col listing-card" >
                
              <img src="<%= decoration.imageUrl %>" class="card-img-top" alt="decoration-image" style="height: 20rem;">
              <div class="card-img-overlay"></div>
              <div class="card-body">
                <p class="card-text">
                  <b><%=decoration.title %></b>
                </p>
              </div>
            </div>
              </a>
            
            <% } %>
         <% } %>
    </div>